njt_feature="njt_health_check_helper"
njt_feature_path="$njt_addon_dir"

njt_feature_test="int a;"
. auto/feature

njt_addon_name="njt_health_check_helper"
hc_helper_src=""
have=NJT_HEALTH_CHECK_HELPER . auto/have
hc_helper_src=""

if test -n "$njt_module_link"; then
    njt_module_type=HTTP
    njt_module_name="njt_http_health_check_helper"
    hc_helper_src="$hc_helper_src $njt_addon_dir/src/njt_common_health_check.c"
    hc_helper_src="$hc_helper_src $njt_addon_dir/src/njt_http_health_check_helper.c"
    hc_helper_src="$hc_helper_src $njt_addon_dir/src/njt_stream_health_check_helper.c"
    njt_module_srcs="$hc_helper_src"
    . auto/module

else
    HTTP_MODULES="$HTTP_MODULES njt_http_health_check_helper"
    hc_helper_src="$hc_helper_src $njt_addon_dir/src/njt_http_health_check_helper.c"
    hc_helper_src="$hc_helper_src $njt_addon_dir/src/njt_stream_health_check_helper.c"
    hc_helper_src="$hc_helper_src $njt_addon_dir/src/njt_common_health_check.c"
    NJT_ADDON_SRCS="$NJT_ADDON_SRCS $hc_helper_src"

fi

