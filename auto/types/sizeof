echo $ngx_n "checking for $ngx_type size ...$ngx_c"

cat << END >> $NJT_AUTOCONF_ERR

----------------------------------------
checking for $ngx_type size

END

ngx_size=

cat << END > $NJT_AUTOTEST.c

#include <sys/types.h>
#include <sys/time.h>
$NJT_INCLUDE_UNISTD_H
#include <signal.h>
#include <stdio.h>
#include <sys/resource.h>
$NJT_INCLUDE_INTTYPES_H
$NJT_INCLUDE_AUTO_CONFIG_H

int main(void) {
    printf("%d", (int) sizeof($ngx_type));
    return 0;
}

END


ngx_test="$CC $CC_TEST_FLAGS $CC_AUX_FLAGS \
          -o $NJT_AUTOTEST $NJT_AUTOTEST.c $NJT_LD_OPT $ngx_feature_libs"

eval "$ngx_test >> $NJT_AUTOCONF_ERR 2>&1"


if [ -x $NJT_AUTOTEST ]; then
    ngx_size=`$NJT_AUTOTEST`
    echo " $ngx_size bytes"
fi


case $ngx_size in
    4)
        ngx_max_value=2147483647
        ngx_max_len='(sizeof("-2147483648") - 1)'
    ;;

    8)
        ngx_max_value=9223372036854775807LL
        ngx_max_len='(sizeof("-9223372036854775808") - 1)'
    ;;

    *)
        echo
        echo "$0: error: can not detect $ngx_type size"

        echo "----------"    >> $NJT_AUTOCONF_ERR
        cat $NJT_AUTOTEST.c  >> $NJT_AUTOCONF_ERR
        echo "----------"    >> $NJT_AUTOCONF_ERR
        echo $ngx_test       >> $NJT_AUTOCONF_ERR
        echo "----------"    >> $NJT_AUTOCONF_ERR

        rm -rf $NJT_AUTOTEST*

        exit 1
esac


rm -rf $NJT_AUTOTEST*

