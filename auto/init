NJT_MAKEFILE=$NJT_OBJS/Makefile
NJT_MODULES_C=$NJT_OBJS/ngx_modules.c

NJT_AUTO_HEADERS_H=$NJT_OBJS/ngx_auto_headers.h
NJT_AUTO_CONFIG_H=$NJT_OBJS/ngx_auto_config.h

NJT_AUTOTEST=$NJT_OBJS/autotest
NJT_AUTOCONF_ERR=$NJT_OBJS/autoconf.err

# STUBs
NJT_ERR=$NJT_OBJS/autoconf.err
MAKEFILE=$NJT_OBJS/Makefile


NJT_PCH=
NJT_USE_PCH=


# check the echo's "-n" option and "\c" capability

if echo "test\c" | grep c >/dev/null; then

    if echo -n test | grep n >/dev/null; then
        ngx_n=
        ngx_c=

    else
        ngx_n=-n
        ngx_c=
    fi

else
    ngx_n=
    ngx_c='\c'
fi


# create Makefile

cat << END > Makefile

default:	build

clean:
	rm -rf Makefile $NJT_OBJS

.PHONY:	default clean
END
