NJET_MAKEFILE=$NJET_OBJS/Makefile
NJET_MODULES_C=$NJET_OBJS/ngx_modules.c

NJET_AUTO_HEADERS_H=$NJET_OBJS/ngx_auto_headers.h
NJET_AUTO_CONFIG_H=$NJET_OBJS/ngx_auto_config.h

NJET_AUTOTEST=$NJET_OBJS/autotest
NJET_AUTOCONF_ERR=$NJET_OBJS/autoconf.err

# STUBs
NJET_ERR=$NJET_OBJS/autoconf.err
MAKEFILE=$NJET_OBJS/Makefile


NJET_PCH=
NJET_USE_PCH=


# check the echo's "-n" option and "\c" capability

if echo "test\c" | grep c >/dev/null; then

    if echo -n test | grep n >/dev/null; then
        ngx_n=
        ngx_c=

    else
        ngx_n=-n
        ngx_c=
    fi

else
    ngx_n=
    ngx_c='\c'
fi


# create Makefile

cat << END > Makefile

default:	build

clean:
	rm -rf Makefile $NJET_OBJS

.PHONY:	default clean
END
